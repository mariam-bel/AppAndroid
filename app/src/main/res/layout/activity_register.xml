<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGLh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/registerAppName"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:text="@string/app_name"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerGLh1"
        android:fontFamily="@font/playfair"
        android:textColor="@color/black"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerGLv1"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerGLv2"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/registerTitle"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintBottom_toTopOf="@id/registerTILuserName"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="2dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerTILuserName"
        app:layout_constraintTop_toBottomOf="@id/registerAppName"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        android:layout_marginTop="60dp"
        app:endIconDrawable="@drawable/ic_person"
        >
        <EditText
            android:id="@+id/registerUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textStyle="italic"
            android:inputType="textPersonName"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerTILSurName"
        app:layout_constraintTop_toBottomOf="@id/registerTILuserName"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        android:layout_marginTop="0dp"
        >

        <EditText
            android:id="@+id/registerSurName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:hint="Surname"
            android:inputType="textPersonName"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerTILpassword"
        app:layout_constraintTop_toBottomOf="@id/registerTILemail"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        android:layout_marginTop="5dp"
        app:endIconDrawable="@drawable/ic_eye"
        >

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:hint="Password"
            android:inputType="textPassword"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:id="@+id/confirmPassword"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintBottom_toTopOf="@id/registerTILpasswordConfirmation"
        android:text="Confirm Password"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="0dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerTILpasswordConfirmation"
        app:layout_constraintTop_toBottomOf="@id/registerTILpassword"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        android:layout_marginTop="25dp"
        app:endIconDrawable="@drawable/ic_eye"
        >

        <EditText
            android:id="@+id/registerPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:hint="Password"
            android:inputType="textPassword"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerTILemail"
        app:layout_constraintTop_toBottomOf="@id/registerTILSurName"
        app:layout_constraintStart_toStartOf="@id/registerGLv1"
        app:layout_constraintEnd_toEndOf="@id/registerGLv2"
        android:layout_marginTop="5dp"
        app:endIconDrawable="@drawable/ic_eye"
        >

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:hint="email"
            android:inputType="textEmailAddress"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_marginTop="20dp"
        android:text="Create"
        app:layout_editor_absoluteX="161dp"
        app:layout_editor_absoluteY="401dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerTILpasswordConfirmation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>